<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/notification_height"
	android:padding="@dimen/default_elevation">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginTop="2dp"
		android:layout_marginStart="@dimen/default_elevation"
		android:layout_marginEnd="@dimen/default_elevation"
		android:contentDescription="@string/content_description_default"
		android:src="@mipmap/ic_launcher"/>

	<LinearLayout
		android:id="@+id/notification_main"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_toEndOf="@+id/icon"
		android:layout_toStartOf="@+id/btClose"
		android:orientation="vertical">

		<TextView
			android:id="@+id/contentTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:layout_margin="2dp"
			android:textSize="@dimen/font_size_small"
			android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>

		<TextView
			android:id="@+id/contentText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/msg_service_running"
			android:maxLines="3"
			android:layout_margin="2dp"
			android:textSize="@dimen/font_size_micro"
			android:textAppearance="@style/TextAppearance.Compat.Notification"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/btClose"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="@dimen/default_elevation"
		android:layout_marginEnd="@dimen/default_elevation"
		android:contentDescription="@string/content_description_default"
		android:src="@drawable/ic_close"/>

</RelativeLayout>